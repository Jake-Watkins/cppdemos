    "version": "0.2.0",
    "compounds": [
        {
           "name": "Full-Stack",
           "configurations": ["Launch Program", "Launch Edge against localhost"],
           "preLaunchTask": "Build"
        }
     ],
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\server.js"
          },
          {
            "type": "edge",
            "request": "launch",
            "name": "Launch Edge against localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",

            
        }
    ]
}